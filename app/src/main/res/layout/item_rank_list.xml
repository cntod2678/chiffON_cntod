<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="#fff">

        <ImageView
            android:id="@+id/img_rank"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/txt_rank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/img_favorite"
                android:textStyle="bold"
                android:text="name"/>

            <TextView
                android:id="@+id/txt_rank_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="brand"/>

            <TextView
                android:id="@+id/txt_rank_small_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="small_type"/>

            <TextView
                android:id="@+id/txt_rank_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="count"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>