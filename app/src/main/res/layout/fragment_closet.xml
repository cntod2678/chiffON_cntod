<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="media.around.MyClosetFragment"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_closet_name"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:text="My Closet"
            android:textSize="20dp"
            android:textStyle="bold"
            android:background="@drawable/background_closet_name"/>
        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/background_closet">

        <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:useDefaultMargins="true"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false"
            android:columnCount="2"
            android:rowCount="6">

            <Button
                android:id="@+id/btnOuter"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_row="0"
                android:layout_rowSpan="3"
                android:layout_gravity="left"
                android:layout_height="270dp"
                android:layout_width="160dp"
                android:background="#00ff0000"
                />

            <Button
                android:id="@+id/btnBottom"
                android:layout_column="0"
                android:layout_columnSpan="1"
                android:layout_row="3"
                android:layout_rowSpan="2"
                android:layout_gravity="left"
                android:layout_height="220dp"
                android:layout_width="160dp"
                android:background="#00ff0000"
                />

            <Button
                android:id="@+id/btnTop"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="0"
                android:layout_rowSpan="2"
                android:layout_height="230dp"
                android:layout_width="160dp"
                android:layout_marginRight="10dp"
                android:background="#00ff0000"
                />

            <Button
                android:id="@+id/btnAcc"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_rowSpan="2"
                android:layout_height="110dp"
                android:layout_width="160dp"
                android:layout_marginRight="10dp"
                android:background="#00ff0000"
                />

            <Button
                android:id="@+id/btnShoes"
                android:layout_column="1"
                android:layout_columnSpan="1"
                android:layout_row="4"
                android:layout_rowSpan="2"
                android:layout_height="140dp"
                android:layout_width="160dp"
                android:layout_marginRight="10dp"
                android:background="#00ff0000"
                />

        </GridLayout>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnFloatingAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:clickable="true"
        android:src="@drawable/plus"
        app:backgroundTint="@color/colorPrimary"/>


</FrameLayout>
